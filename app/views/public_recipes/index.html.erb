<h2>Public Recipes</h2>

<ul class="public-recipes-ul-container">
  <% @recipes.each do |recipe| %>
    <li>
      <div class="left">
        <%= link_to recipe.name, recipe_path(recipe) %>
        <div class="chef">
          By <%= recipe.user_id %>
        </div>
      </div>
      <div class="right">
        <p>Total food items: number</p>
        <p>Total price: number</p>
      </div>
    </li>
  <% end %>
</ul>